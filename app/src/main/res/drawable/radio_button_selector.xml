<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#FFFFFF"/> <!-- white background when checked -->
            <corners android:radius="50dp"/> <!-- fully rounded corners -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00000000"/> <!-- transparent background when not checked -->
            <corners android:radius="50dp"/>
        </shape>
    </item>
</selector>
