<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택된 상태 -->
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/radio_button_selected_background"/>
            <item android:drawable="@drawable/baseline_directions_walk_24"/>
        </layer-list>
    </item>
    <!-- 비선택된 상태 -->
    <item>
        <layer-list>
            <item android:drawable="@drawable/radio_button_unselected_background"/>
            <item android:drawable="@drawable/baseline_directions_walk_24_b"/>
        </layer-list>
    </item>
</selector>
